= simple_form_for @review, url: admin_reviews_path, method: :post do |f|
  = f.input :title, label: t('activerecord.attributes.reviews.title'), required: false
  = f.input :body, as: :text, input_html: {rows: 5, style: 'width: 100%'}, label: t('activerecord.attributes.reviews.body'), required: false
  = f.input :pic, type: :file, label: t('activerecord.attributes.reviews.pic'), required: false

  = f.button :submit, t('.new_review_btn'), class: 'btn'
= simple_form_for @review, url: admin_review_path(@review), methode: :put do |f|
  = f.input :title, label: t('activerecord.attributes.reviews.title'), required: false
  = f.text_area :body, rows: 5, label: t('activerecord.attributes.reviews.body'), required: false
  = f.input :pic, type: :file, label: t('activerecord.attributes.reviews.pic'), required: false

  =f.button :submit, t('.edit_review_btn'), class: 'btn'
.btn.delete-link= link_to t('.delete_link'), admin_review_path(@review), method: :delete